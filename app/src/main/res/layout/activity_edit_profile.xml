<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityEditProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView

                android:layout_width="359dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/general_magrin"
                app:cardCornerRadius="4dp"
                android:elevation="@dimen/elevation"
                android:padding="@dimen/general_padding"
                app:cardBackgroundColor="@color/light_vivah">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_userName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="48dp"
                        android:hint="NA"
                        android:textSize="24sp" />

                    <EditText
                        android:id="@+id/et_user_case"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:hint="NA" />

                    <TextView
                        android:id="@+id/tv_usernameEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="@dimen/general_magrin"
                        android:text="Click to Edit"
                        android:textSize="12dp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/general_magrin"
                android:elevation="@dimen/elevation"
                android:padding="@dimen/general_padding"
                app:cardBackgroundColor="@color/light_vivah">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/general_magrin"
                        android:text="Personal Information(s)" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_magrin"
                            android:layout_weight=".6"
                            android:text="Father's Name"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/et_father_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_magrin"
                            android:layout_weight="1.4"
                            android:hint="NA"
                            android:textAlignment="viewStart"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_magrin"
                            android:layout_weight=".6"
                            android:text="Mother's Name:       "
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/et_mother_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_magrin"
                            android:layout_weight="1.4"
                            android:hint="NA"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_magrin"
                            android:layout_weight=".6"
                            android:text="Mobile No:    "
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/et_mobile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_magrin"
                            android:layout_weight="1.4"
                            android:hint="NA"
                            android:textAlignment="viewStart"
                            android:textSize="18sp" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_EditPersonalInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="@dimen/general_magrin"
                        android:text="Click to Edit"
                        android:textSize="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/general_magrin"
                android:elevation="@dimen/elevation"
                android:padding="@dimen/general_padding"
                app:cardBackgroundColor="@color/light_vivah">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/general_magrin"
                        android:text="Cast Information(s)" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_magrin"
                            android:layout_weight=".6"
                            android:text="Cast:  "
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/et_cast"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_magrin"
                            android:layout_weight="1.4"
                            android:hint="NA"
                            android:textAlignment="viewStart"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_magrin"
                            android:layout_weight=".6"
                            android:text="Gotra: "
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/et_gotra"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_magrin"
                            android:layout_weight="1.4"
                            android:hint="NA"
                            android:textAlignment="viewStart"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_CastInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="@dimen/general_magrin"
                        android:text="Click to Edit"
                        android:textSize="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/general_magrin"
                android:elevation="@dimen/elevation"
                android:padding="@dimen/general_padding"
                app:cardBackgroundColor="@color/light_vivah">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/general_magrin"
                        android:text="Address" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_magrin"
                            android:layout_weight=".6"
                            android:text="Address:  "
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/et_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_magrin"
                            android:layout_weight="1.4"
                            android:hint="NA"
                            android:textAlignment="viewStart"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_magrin"
                            android:layout_weight=".6"
                            android:text="Village "
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/et_village"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_magrin"
                            android:layout_weight="1.4"
                            android:hint="NA"
                            android:textAlignment="viewStart"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_magrin"
                            android:layout_weight=".6"
                            android:text="City:             "
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/et_city"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_magrin"
                            android:layout_weight="1.4"
                            android:hint="NA"
                            android:textAlignment="viewStart"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_magrin"
                            android:layout_weight=".6"
                            android:text="Pin Code:             "
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/et_pincode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_magrin"
                            android:layout_weight="1.4"
                            android:hint="NA"
                            android:textAlignment="viewStart"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_magrin"
                            android:layout_weight=".6"
                            android:text="State:             "
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/et_state"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_magrin"
                            android:layout_weight="1.4"
                            android:hint="NA"
                            android:textAlignment="viewStart"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_EditAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="@dimen/general_magrin"
                        android:text="Click to Edit"
                        android:textSize="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>